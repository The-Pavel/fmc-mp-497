<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="section">
    <view class="section__title">Story title</view>
    <input name="title" placeholder="please input title" value="{{title}}"/>
  </view>
  <view class="section">
    <view class="section__title">Story content</view>
    <input name="content" placeholder="please input content" value="{{content}}"/>
  </view>
  
  <view class="btn-area">
    <button form-type="submit">Submit</button>
    <button form-type="reset">Reset</button>
  </view>
</form>